<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.details.DetailsFragment"
    android:background="@color/black"
    android:clickable="true"
    android:focusable="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#252525">

    <LinearLayout
        android:id="@+id/infoLayout"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/cityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top"
            android:textColor="@color/material_on_background_emphasis_high_type"
            android:textSize="@dimen/city_text_size"
            android:textStyle="bold"
            tools:text="Санкт Петербург" />


        <ImageView
            android:id="@+id/weatherIcon"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerInside">
        </ImageView>

        <TextView
            android:id="@+id/coordinatesHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_between_lines"
            android:text="@string/coordinates"
            android:textColor="@color/material_on_background_emphasis_high_type"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:id="@+id/coordinates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_between_lines"
            android:textSize="@dimen/description_text_size"
            tools:text="20200, 20000" />

        <TextView
            android:id="@+id/temperatureHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_between_lines"
            android:text="@string/temperature_header"
            android:textColor="@color/material_on_background_emphasis_high_type"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_between_lines"
            android:textSize="@dimen/description_text_size"
            android:textStyle="bold"
            tools:text="0" />

        <TextView
            android:id="@+id/feelsLikeHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_between_lines"
            android:text="@string/feels_like_header"
            android:textColor="@color/material_on_background_emphasis_high_type"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:id="@+id/feelsLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_between_lines"
            android:textSize="@dimen/description_text_size"
            android:textStyle="bold"
            tools:text="-0" />

        <TextView
            android:id="@+id/conditionHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_between_lines"
            android:text="@string/condition_header"
            android:textColor="@color/material_on_background_emphasis_high_type"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:id="@+id/condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_between_lines"
            android:textSize="@dimen/description_text_size"
            android:textStyle="bold"
            tools:text="облачно" />

        <TextView
            android:id="@+id/humidityHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_between_lines"
            android:text="@string/humidity_header"
            android:textColor="@color/material_on_background_emphasis_high_type"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:id="@+id/humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_between_lines"
            android:textSize="@dimen/description_text_size"
            android:textStyle="bold"
            tools:text="100 %"
            android:layout_marginBottom="30dp"/>

    </LinearLayout>
    </ScrollView>
    <FrameLayout
        android:id="@+id/loadingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible">

        <com.google.android.material.progressindicator.CircularProgressIndicator
            style="@style/Widget.Material3.CircularProgressIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            app:indicatorColor="@color/teal_200" />
    </FrameLayout>


</LinearLayout>